BoxLayout:
    orientation: 'vertical'
    Label:
        id: itemlabel
        text:'Item Name:'
    TextInput:
        id: itemname
        multiline:False
    Label:
        id: desclabel
        text: 'Description:'
    TextInput:
        id: desc
        multiline:False
    Label:
        id: price
        text: 'Price Per Day'
    TextInput:
        id: priceinput
    Button:
        id: saveitem
        text: 'Save Item'
        on_press:app.press_save(itemname.text, desc.text, priceinput.text, instruction.text)
    Button:
        id: cancelitem
        text: 'Cancel'
        on_press:app.cancel()
    Label:
        id: instruction
        text: 'Enter details for new item'